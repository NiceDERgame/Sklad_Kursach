<Page x:Class="Sklad_Kursach.Pages.Profile_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Профиль">

    <Grid Background="{StaticResource BrushBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="White" Padding="20,15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <DockPanel>
                <Button Content="← Назад" Click="GoBack" Style="{StaticResource BtnGhostStyle}" Width="100"/>
                <TextBlock Text="ЛИЧНЫЙ КАБИНЕТ" FontSize="20" FontWeight="Bold" Foreground="{StaticResource BrushPrimary}" 
                           VerticalAlignment="Center" Margin="20,0"/>
            </DockPanel>
        </Border>

        <ScrollViewer Grid.Row="1" Padding="30">
            <StackPanel MaxWidth="800" HorizontalAlignment="Center">

                <Border Background="White" CornerRadius="12" Padding="30" Margin="0,0,0,25">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="2"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" Margin="0,0,30,0">
                            <Ellipse Width="120" Height="120" Stroke="{StaticResource BrushPrimary}" StrokeThickness="2">
                                <Ellipse.Fill>
                                    <SolidColorBrush Color="#E3F2FD"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <TextBlock Text="👤" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource BrushPrimary}"/>
                            <Button Content="📷" VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                                    Width="35" Height="35" Style="{StaticResource BtnStyle}"/>
                        </Grid>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Name="UserName" Text="имя" FontSize="24" FontWeight="Bold" Foreground="{StaticResource BrushTextPrimary}"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Должность: " FontSize="16" Foreground="{StaticResource BrushPrimary}" Margin="0,5,0,20"/>
                                <TextBlock Name="PostTb" FontSize="16" Foreground="{StaticResource BrushTextPrimary}" FontWeight="Bold" Margin="0,5,0,20"/>


                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Margin="1">
                                    <TextBlock Text="Логин в системе" Foreground="#78909C" FontSize="12"/>
                                    <TextBlock Name="LoginTb" Text="ИЗ БД" FontWeight="SemiBold"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" >
                                    <TextBlock Text="Последний вход" Foreground="#78909C" FontSize="12"/>
                                    <TextBlock x:Name="LastVhod" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>