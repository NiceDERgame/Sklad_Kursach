<Page x:Class="Sklad_Kursach.Pages.Incoming_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="Приемка" d:DesignHeight="700" d:DesignWidth="1100"
      Loaded="Page_Loaded"
      SizeChanged="Page_SizeChanged">

    <Grid Background="{StaticResource BrushBackground}">

        <!-- ================= РЕСУРСЫ ================= -->
        <Grid.Resources>

            <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}"/>
                <Setter Property="Margin" Value="0,0,0,6"/>
            </Style>

            <Style x:Key="HintStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="{StaticResource BrushTextSecondary}"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
            </Style>

            <!-- TextBox: на основе твоего InputStyle -->
            <Style x:Key="TextPretty" TargetType="TextBox" BasedOn="{StaticResource InputStyle}">
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Padding" Value="10,0"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>

            <!-- ComboBox: ровный текст и нормальное выравнивание -->
            <Style x:Key="ComboPretty" TargetType="ComboBox">
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ComboBox">
                            <Grid>
                                <Border x:Name="Bd"
                                        CornerRadius="4"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"/>

                                <ContentPresenter Margin="12,0,36,0"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  Content="{TemplateBinding SelectionBoxItem}"/>

                                <ToggleButton Focusable="False"
                                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                              ClickMode="Press"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              HorizontalAlignment="Right"
                                              Width="36">
                                    <TextBlock Text="▾"
                                               FontSize="16"
                                               Foreground="{StaticResource BrushTextSecondary}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </ToggleButton>

                                <Popup Placement="Bottom"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       AllowsTransparency="True"
                                       Focusable="False"
                                       PopupAnimation="Slide">
                                    <Border Background="White"
                                            BorderBrush="{StaticResource BrushBorder}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="4">
                                        <ScrollViewer CanContentScroll="True" MaxHeight="260">
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource BrushPrimary}"/>
                                    <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource BrushPrimary}"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="DatePretty" TargetType="DatePicker">
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
                <Setter Property="Background" Value="White"/>
            </Style>

        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= ШАПКА ================= -->
        <StackPanel Grid.Row="0" Margin="40,40,40,20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="⬅"
                        ToolTip="Вернуться назад"
                        Width="50" Height="50"
                        Margin="0,0,20,0"
                        Style="{StaticResource BtnStyle}"
                        Click="GoBack_Click"
                        FontSize="24"
                        Padding="0,0,0,4"/>

                <TextBlock Text="📥" FontSize="32" Margin="0,0,15,0" VerticalAlignment="Center"/>
                <StackPanel>
                    <TextBlock Text="ПРИЁМКА ТОВАРА"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{StaticResource BrushPrimaryDark}"/>
                    <TextBlock Text="Добавьте новую поставку в список «Новый товар»"
                               FontSize="14"
                               Foreground="{StaticResource BrushTextSecondary}"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- ================= КОНТЕНТ (АДАПТИВНЫЙ) ================= -->
        <Grid Grid.Row="1" Margin="40,0,40,40" x:Name="ContentGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Инструкция -->
            <Border x:Name="HelpCard"
                    Grid.Row="0" Grid.Column="0"
                    Background="#FAFBFD"
                    CornerRadius="10"
                    Padding="18"
                    BorderBrush="{StaticResource BrushBorder}"
                    BorderThickness="1"
                    Opacity="0.92"
                    HorizontalAlignment="Stretch">

                <StackPanel>
                    <TextBlock Text="ℹ Как это работает"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{StaticResource BrushPrimary}"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="• Введите название товара и выберите категорию." Style="{StaticResource HintStyle}"/>
                    <TextBlock Text="• Укажите дату прибытия, количество и срок хранения." Style="{StaticResource HintStyle}"/>
                    <TextBlock Text="• Выберите поставщика и нажмите «Принять»." Style="{StaticResource HintStyle}"/>

                    <Border Margin="0,10,0,0"
                            Padding="12"
                            CornerRadius="8"
                            Background="#F5F7FA"
                            BorderBrush="{StaticResource BrushBorder}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Совет"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource BrushTextPrimary}"/>
                            <TextBlock Text="Если срок хранения небольшой, лучше сразу отправлять товар на сортировку."
                                       Foreground="{StaticResource BrushTextSecondary}"
                                       Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Форма -->
            <Border x:Name="FormCard"
                    Grid.Row="0" Grid.Column="2"
                    Background="White"
                    CornerRadius="12"
                    Padding="26"
                    BorderBrush="#2E7D32"
                    BorderThickness="2"
                    HorizontalAlignment="Stretch">

                <Border.Effect>
                    <DropShadowEffect BlurRadius="28" ShadowDepth="6" Opacity="0.18"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="🟢 Новая поставка"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="{StaticResource BrushTextPrimary}"
                               Margin="0,0,0,18"/>

                    <TextBlock Text="Название товара" Style="{StaticResource SectionTitleStyle}"/>
                    <TextBlock Text="Введите название (или выберите из списка позже)." Style="{StaticResource HintStyle}"/>
                    <TextBox x:Name="Tovar_Name" Style="{StaticResource TextPretty}"/>

                    <TextBlock Text="Категория" Style="{StaticResource SectionTitleStyle}" Margin="0,14,0,0"/>
                    <ComboBox x:Name="CategoryCb" Style="{StaticResource ComboPretty}"/>

                    <TextBlock Text="Дата прибытия" Style="{StaticResource SectionTitleStyle}" Margin="0,14,0,0"/>
                    <DatePicker x:Name="ReceiptDateDp" Style="{StaticResource DatePretty}"/>

					<Grid Margin="0,14,0,0">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="10"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="10"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>

						<StackPanel Grid.Column="0">
							<TextBlock Text="Общее кол-во" Style="{StaticResource SectionTitleStyle}"/>
							<TextBox x:Name="TotalCountTb"
                                     Style="{StaticResource TextPretty}"
                                     PreviewTextInput="NumberValidation"/>
						</StackPanel>

						<StackPanel Grid.Column="2">
							<TextBlock Text="Цена за 1 шт" Style="{StaticResource SectionTitleStyle}"/>
							<TextBox x:Name="PriceTb"
                                     Style="{StaticResource TextPretty}"
                                     PreviewTextInput="NumberValidation"/>
						</StackPanel>

						<StackPanel Grid.Column="4">
							<TextBlock Text="Срок хранения (часов)" Style="{StaticResource SectionTitleStyle}"/>
							<TextBox x:Name="ShelfLifeTb"
                                     Style="{StaticResource TextPretty}"
                                     PreviewTextInput="NumberValidation"/>
						</StackPanel>
					</Grid>

                    <TextBlock Text="Поставщик" Style="{StaticResource SectionTitleStyle}" Margin="0,14,0,0"/>
                    <ComboBox x:Name="SupplierCb" Style="{StaticResource ComboPretty}"/>

                    <Button Content="ПРИНЯТЬ И ДОБАВИТЬ В «НОВЫЙ ТОВАР»"
                            Margin="0,24,0,0"
                            Height="52"
                            Style="{StaticResource BtnStyle}"
                            Click="Accept_Click"/>
                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</Page>
